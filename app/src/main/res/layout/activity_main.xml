<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/date_time_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="current date and time "
        android:textColor="#7C1A3B"
        android:textSize="90px"
         />

    <TextView
        android:id="@+id/dispaly"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_above="@+id/createalaram"
        android:layout_below="@+id/date_time_view"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40dp" />

    <Button
        android:id="@+id/createalaram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="148dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_add_alarm_24"
        android:text="Create Alaram"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/savedalaram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/white"
        android:text="Saved Alarms"
        android:textColor="@color/black" />
</RelativeLayout>
